<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Conferences" >

    <TextView
        android:id="@+id/conferencesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="TextView" />
    
        <TextView
        android:id="@+id/conferencesSTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/conferencesName"
        android:text="TextView" />

    <TextView
        android:id="@+id/conferencesETime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/conferencesSTime"
        android:text="TextView" />

    <TextView
        android:id="@+id/conferencesDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/conferencesETime"
        android:text="TextView" />

    <TextView
        android:id="@+id/conferencesLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/conferencesDescription"
        android:text="TextView" />

    <TextView
        android:id="@+id/conferencesSpeakers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/conferencesLocation"
        android:text="TextView" />

    <TextView
        android:id="@+id/conferencesBiography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/conferencesSpeakers"
        android:text="TextView" />

    <Button
        android:id="@+id/conferencesB1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Survey" />

</RelativeLayout>
