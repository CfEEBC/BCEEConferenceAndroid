
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FBF7"
    tools:context=".Home" >

    <ImageView
        android:id="@+id/welcomeIV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bccfee_logo_rgb_hires" />

    <TextView
        android:id="@+id/conferenceGeneralSurvey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeIV1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Conference Survey"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#31913D" />

    <TextView
        android:id="@+id/welcomeB1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/welcomeIV1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:text="Enter"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#31913D" />

</RelativeLayout>
